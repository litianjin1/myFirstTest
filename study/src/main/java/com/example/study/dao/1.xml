<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.adcustomer.mapper.AdAccountLoginInfoMapper">

    <resultMap type="AdAccountLoginInfo" id="AdAccountLoginInfoResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <!-- 映射classes属性 ，联查带出对象 ，1对1 ：通过设置javaType属性，映射实体类-->
        <association property="classes" javaType="Classes">
            <id property="id" column="c_id"/>
            <result property="name" column="c_name"/>
        </association>


        <!-- 映射students属性 ，1对多-->
        <collection property="students" ofType="student">
            <id property="id" column="id"/>
            <result property="name" column="name"/>
            <result property="address" column="address"/>
            <result property="tel" column="tel"/>
            <result property="score" column="score"/>
        </collection>

    </resultMap>

    <sql id="selectAdAccountLoginInfoVo">
        select id from ad_account_login_info
    </sql>

    <select id="selectAdAccountLoginInfoList" parameterType="AdAccountLoginInfo" resultMap="AdAccountLoginInfoResult">
        <include refid="selectAdAccountLoginInfoVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
        </where>
    </select>

    <select id="selectAdAccountLoginInfoById" parameterType="Long" resultMap="AdAccountLoginInfoResult">
        <include refid="selectAdAccountLoginInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertAdAccountLoginInfo" parameterType="AdAccountLoginInfo">
        insert into ad_account_login_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null  ">id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null  ">#{id},</if>
        </trim>
    </insert>

    <update id="updateAdAccountLoginInfo" parameterType="AdAccountLoginInfo">
        update ad_account_login_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="accountId != null  ">account_id = #{accountId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAdAccountLoginInfoById" parameterType="Long">
        delete from ad_account_login_info where id = #{id}
    </delete>

    <delete id="deleteAdAccountLoginInfoByIds" parameterType="String">
        delete from ad_account_login_info where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>